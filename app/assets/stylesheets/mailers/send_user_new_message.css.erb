/*LOGO*/
.logo h1 {
	margin: 0;
}
.logo h1 a {
	color: #000;
	font-size: 20px;
	font-weight: 700;
	text-transform: uppercase;
	font-family: 'Nunito Sans', sans-serif;
}
/*HERO*/
.hero {
	position: relative;
	z-index: 0;
}
.hero .overlay {
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	content: '';
	width: 100%;
	background: #000000;
	z-index: -1;
	opacity: .3;
}
.hero .text {
	color: rgba(255,255,255,.8);
	padding: 0 4em;
}
.hero .text h2 {
	color: #ffffff;
	font-size: 40px;
	margin-bottom: 0;
	line-height: 1.2;
	font-weight: 900;
}

.heading-section-white {
	color: rgba(255,255,255,.8);
}


.star-email {
	font-size: 25px;
	margin-top: 15px;
}
