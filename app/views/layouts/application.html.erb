<!DOCTYPE html>
<html>
    <head>
        <title>MovieReview</title>
        <%= csrf_meta_tags %>
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body>
        <%= render 'layouts/header' %>
        <div class="container-fluid">
            <%= render 'layouts/messages' %>
            <%= render 'layouts/sidebar' %>
            <%= yield %>
        </div>

        <div id="footer">
            <div class="container">
                <p>&nbsp;</p>
                <p class="copyright pull-left">Copyright <%= Time.zone.today.year %> Â© MovieDB</p>
                <% if user_signed_in? %>
                    <p class="user-email pull-right">Logged in as <%= current_user.email %></p>
                <% end %>
            </div>
        </div>
    </body>
</html>
