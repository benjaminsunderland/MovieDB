<%= simple_form_for [@user, @movie], class: 'text-center' do |f| %>
	<%= f.input :title, required: true %>
	<%= f.input :text, required: true %>
	<%= f.input :category_type, collection: Movie.category_types.map {|k, v| [k.humanize.capitalize, k]} %>
	<%= f.file_field :image %><br>
    <%= f.button :submit, class: 'btn btn-primary' %>
<% end %>
