<!DOCTYPE html>
<html>
	<head>
	    <meta charset="utf-8">
		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
	</head>

	<body width="100%" style="margin: 0; padding: 0 !important; mso-line-height-rule: exactly; background-color: #f1f1f1;">
		<center style="width: 100%; background-color: #f1f1f1;">

	    <div style="max-width: 600px; margin: 0 auto;" class="email-container">
	    	<!-- BEGIN BODY -->
	    	<table align="center" role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" style="margin: auto;">
		      	<tr>
		        	<td valign="top" class="bg_white" style="padding: 1em 2.5em;">
			          	<table role="presentation" border="0" cellpadding="0" cellspacing="0" width="100%">
			          		<tr>
			          			<td width="40%" class="logo" style="text-align: left;">
						            <h1><a href="#">MovieDB</a></h1>
						        </td>
						        <td width="60%" class="logo" style="text-align: right;">
							    	<span class="glyphicon glyphicon-star star-email text-warning" aria-hidden="true"></span>
							    	<span class="glyphicon glyphicon-star star-email text-warning" aria-hidden="true"></span>
							    	<span class="glyphicon glyphicon-star star-email text-warning" aria-hidden="true"></span>
							    	<span class="glyphicon glyphicon-star star-email text-warning" aria-hidden="true"></span>
							    	<span class="glyphicon glyphicon-star star-email text-warning" aria-hidden="true"></span>
						        </td>
			          		</tr>
			          	</table>
		         	</td>
			    </tr>
				<tr>
			    <tr>
		        	<td valign="middle" class="main-hero bg_white">
		        		<%= image_tag(attachments['pandora.jpg'].url, class: 'img-main') %>
			        	<div class="overlay"></div>
			            <table>
			            	<tr>
			            		<td>
			            			<div class="text">
			            			</div>
			            		</td>
			            	</tr>
			            </table>
		        	</td>
			    </tr>
		    	<tr>
			        <td class="bg_dark email-section" style="text-align:center;">
			        	<div class="heading-section heading-section-white">
			          	<h2>Welcome To MovieDB</h2>
			          	<p>Please confirm your email <u>here.</u></p>
			        	</div>
			        </td>
		        </tr>
	    	</table>
	    </div>
	    <div class="pandora"></div>
	</body>
</html>